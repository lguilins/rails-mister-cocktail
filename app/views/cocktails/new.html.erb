<div class="container">
  <h1>Create new Cocktail</h1>
  <%= simple_form_for @cocktail do |f| %>
  <%= f.input :name %>
  <%= f.button :submit, "Vai caralho!" %>
  <%= link_to 'Back to Tasks List', cocktails_path %>
  <%end%>
</div>
<div class="container">
<%= simple_form_for(@cocktail) do |f| %>
  <% if @cocktail.errors.any? %>
    <div class="errors-container">
      <ul>
        <% @cocktail.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

